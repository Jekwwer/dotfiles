# .editorconfig: Enforces consistent coding styles.

# NOTE: 'max_line_length' is included as a style guideline reference.
# It is not enforced by EditorConfig itself.

# Global settings: UTF-8 encoding, Unix-style newlines, 2-space indentation
[*]
charset = utf-8
end_of_line = lf
indent_size = 2
indent_style = space
insert_final_newline = true
max_line_length = 88
trim_trailing_whitespace = true

# Configuration file settings (e.g., .editorconfig, .gitignore)
[.*]
trim_trailing_whitespace = false

# Markdown-specific settings
[*.md]
max_line_length = 120
trim_trailing_whitespace = false

# JSON-specific settings
[*.json]
max_line_length = off

# Python-specific settings
[*.py]
indent_size = 4

# Shell-specific settings
[*.sh]
indent_size = 4

# Text and log files
[*.{txt,log}]
trim_trailing_whitespace = false
